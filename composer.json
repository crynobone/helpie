{
	"license": "BSD-3-Clause",
	"type": "project",
	"require": {
		"orchestra/foundation": "^3.0.11",
		"orchestra/control": "*"
	},
	"require-dev": {
		"orchestra/testing": "*",
		"orchestra/installer": "*",
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"resources/database"
		],
		"psr-4": {
			"Helpie\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan publish:assets orchestra/foundation",
			"php artisan orchestra:optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan publish:assets orchestra/foundation",
			"php artisan orchestra:optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
